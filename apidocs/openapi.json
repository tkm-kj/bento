{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Petstore API",
    "description" : "これはペットストアに関するAPIです。",
    "termsOfService" : "http://swagger.io/terms/",
    "contact" : {
      "email" : "apiteam@swagger.io"
